{% extends 'pages/base.html.twig' %}

{% block title %}
	Blog - Page de profile
{% endblock %}

{% block body %}
	<h1 class="text-indigo-700 text-5xl font-bold text-center">Page de profile</h1>
	<section class="flex flex-col w-screen max-w-96 bg-neutral-100 p-4 m-auto my-4">
		<p>Email:
			{{app.user.email}}
		</p>
		<p>Username:
			{{app.user.username}}
		</p>
	</section>
	<section>
		{{form(articleForm)}}
		</section>

		<section>
			{% for article in articles %}
				<div class="p-4 bg-neutral-200 flex flex-col justify-center m-4 rounded">
					<h3 class="text-4xl">{{article.titre}}</h3>
					{% if article.contenu %}
						<p>{{article.contenu}}</p>
					{% endif %}
					<p>{{article.date|date("m/d/Y - H:i")}}</p>
				</div>
			{% endfor %}
		</section>
	{% endblock %}
